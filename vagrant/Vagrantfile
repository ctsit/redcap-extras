# -*- mode: ruby -*-
# vi: set ft=ruby :

# Vagrantfile API/syntax version. Don't touch unless you know what you're doing!
VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|
  config.vm.box = "puphpet/debian75-x64"
  config.vm.hostname = "redcap"
  config.vm.network "forwarded_port", guest: 80, host: 8998

  puts "Sharing ../hooks folder with the guest /redcap_data/hooks/"
  config.vm.synced_folder "../hooks/", "/redcap_data/hooks/", owner: "root", group: "root"
  puts "Sharing ../plugins folder with the guest /redcap_data/plugins/"
  config.vm.synced_folder "../plugins/", "/redcap_data/plugins/", owner: "root", group: "root"

  puts "Execute custom shell script: bootstrap.sh"
  config.vm.provision "shell" do |s|
  	s.path = "bootstrap.sh"
  end
end

